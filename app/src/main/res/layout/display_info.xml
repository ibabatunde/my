<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <TextView
            android:textSize="@dimen/first_letter_size"
            tools:text="D"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/firstLetter"
            android:background="@drawable/oval_holder_blue"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_of_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="top"
                tools:text="@string/title_one"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/body_of_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/first_line"
                android:textColor="@color/black"
                android:layout_below="@+id/title_of_entry"/>
            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="DD/MM/YY"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>

        </RelativeLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>